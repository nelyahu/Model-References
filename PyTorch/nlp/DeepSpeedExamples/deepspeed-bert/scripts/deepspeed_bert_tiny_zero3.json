      "total_num_steps": 100000,
      "warmup_type": "linear"
    }
  },
  "wall_clock_breakdown": false,
  "bf16": {"enabled": true},
  "zero_optimization": {
    "stage": 3,
    "overlap_comm": false,
    "reduce_scatter" : false,
    "contiguous_gradients" : true
  },
  "tensorboard": { "enabled": false },
  "timers": {
    "throughput": {
      "enabled": true,
      "synchronized": false
    }
  }
}
